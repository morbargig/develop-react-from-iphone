{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "rootDir": "./",
        "target": "es2017",
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./*.ts",
        "src/*.ts",
    ],
    "exclude": [
        "node_modules",
        "webpack",
        "dist"
    ]
}