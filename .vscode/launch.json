    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "build",
            "autoAttachChildProcesses": true,
            "stopOnEntry": true,
            "program": "${workspaceFolder}/node_modules/.bin/webpack-cli",
            // "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--config",
                "${workspaceFolder}/front/webpack.config.js"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}